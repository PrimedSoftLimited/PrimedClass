<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_height="match_parent"
    android:background="@drawable/graduation"
    tools:context=".Auth.ParentSignupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:layout_width="90dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_addone"
            android:id="@+id/addImageParent"
            android:layout_height="90dp" />
        <EditText
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:id="@+id/edtParentName"
            android:textColorHint="#8effffff"
            android:paddingEnd="32dp"
            android:background="@drawable/bubble"
            android:gravity="center_vertical"
            android:paddingStart="32dp"
            android:hint="Name"
            android:textColor="#ffffff" />

        <EditText
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/edtParentEmail"
            android:paddingEnd="32dp"
            android:inputType="textEmailAddress"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/bubble"
            android:textColorHint="#8effffff"
            android:gravity="center_vertical"
            android:paddingStart="32dp"
            android:hint="Email"
            android:textColor="#ffffff" />

        <EditText
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/edtParentPhoneNumber"
            android:paddingEnd="32dp"
            android:layout_gravity="center_horizontal"
            android:inputType="phone"
            android:layout_marginTop="16dp"
            android:background="@drawable/bubble"
            android:textColorHint="#8effffff"
            android:gravity="center_vertical"
            android:paddingStart="32dp"
            android:hint="Phone Number"
            android:textColor="#ffffff" />

        <EditText
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/edtParentAddress"
            android:paddingEnd="32dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/bubble"
            android:textColorHint="#8effffff"
            android:gravity="center_vertical"
            android:paddingStart="32dp"
            android:hint="Home Address"
            android:textColor="#ffffff" />
        <EditText
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/edtParentPassword"
            android:paddingEnd="32dp"
            android:inputType="textPassword"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/bubble"
            android:textColorHint="#8effffff"
            android:gravity="center_vertical"
            android:paddingStart="32dp"
            android:hint="Password"
            android:textColor="#ffffff" />
        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btnPickParentLocation"
            android:layout_marginTop="20dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            fancy:fb_defaultColor="@color/darkop"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            fancy:fb_text="Pick Your Home Location"
            fancy:fb_textColor="#fff"
            fancy:fb_textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            fancy:fb_radius="30dp"/>
        <Button
            android:id="@+id/btnCompleteParentRegistration"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/_dark"
            android:textAllCaps="false"
            android:foregroundTint="@color/darkop"
            android:text="Sign up"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>

</ScrollView>