<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".Activity.AddChildActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">


            <ImageView
                android:layout_width="match_parent"
                android:alpha="0.5"
                android:scaleType="centerCrop"
                android:id="@+id/imgBackground"
                android:layout_height="match_parent" />
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imgAddChild"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="16dp"
                android:src="@drawable/ic_add_black_24dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical">



        <EditText
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:id="@+id/edtChildName"
            android:textColorHint="#8effffff"
            android:paddingEnd="32dp"
            android:inputType="text"
            android:background="@drawable/bubble"
            android:gravity="center_vertical"
            android:paddingStart="32dp"
            android:hint="Name"
            android:textColor="#ffffff" />

        <EditText
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/edtChildPresentClass"
            android:paddingEnd="32dp"
            android:inputType="text"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/bubble"
            android:textColorHint="#8effffff"
            android:gravity="center_vertical"
            android:paddingStart="32dp"
            android:hint="Present Class"
            android:textColor="#ffffff" />

        <EditText
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/edtChildAge"
            android:paddingEnd="32dp"
            android:layout_gravity="center_horizontal"
            android:inputType="number"
            android:layout_marginTop="16dp"
            android:background="@drawable/bubble"
            android:textColorHint="#8effffff"
            android:gravity="center_vertical"
            android:paddingStart="32dp"
            android:hint="Age"
            android:textColor="#ffffff" />

        <EditText
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/edtParentExpectation"
            android:paddingEnd="32dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/bubble"
            android:textColorHint="#8effffff"
            android:gravity="center_vertical"
            android:paddingStart="32dp"
            android:hint="Expectation"
            android:textColor="#ffffff" />
        <EditText
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/edtChildChallenges"
            android:paddingEnd="32dp"
            android:inputType="text"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/bubble"
            android:textColorHint="#8effffff"
            android:gravity="center_vertical"
            android:paddingStart="32dp"
            android:hint="Noticeable Academic Challenges"
            android:textColor="#ffffff" />
    </LinearLayout>

        <Button
            android:id="@+id/btnAddChild"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/_dark"
            android:textAllCaps="false"
            android:foregroundTint="@color/darkop"
            android:text="Add Child"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>

</ScrollView>