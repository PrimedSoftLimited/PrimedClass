<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_marginBottom="6dp"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/txtDateStarted"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="date and time started"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="Topic taught"
            android:textSize="16sp"
            android:textStyle="bold"
            android:id="@+id/txtTopicTaught"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:id="@+id/txtDateCompleted"
            android:text="Date and Time Completed"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="Completed"
            android:textSize="16sp"
            android:id="@+id/txtCompleted"
            android:textStyle="bold"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/btnSignOutClass"
            android:layout_marginLeft="20dp"
            android:background="@color/colorPrimary"
            android:text="Sign out"
            android:textColor="#fff"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>
