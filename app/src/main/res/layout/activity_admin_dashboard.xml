<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AdminDashboard">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="50dp"
                android:elevation="6dp"
                android:layout_marginLeft="40dp"
                android:id="@+id/ii"
                android:layout_alignParentLeft="true"
                app:cardPreventCornerOverlap="false">

                <ImageView
                    android:layout_width="100dp"
                    android:src="@drawable/ic_group_black"
                    android:scaleType="fitCenter"
                    android:padding="15dp"
                    android:id="@+id/imgAllUsers"
                    android:layout_height="100dp"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="50dp"
                android:layout_marginLeft="40dp"
                android:id="@+id/iii"
                android:elevation="6dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="40dp"
                android:layout_alignParentRight="true"
                app:cardPreventCornerOverlap="false">

                <ImageView
                    android:layout_width="100dp"
                    android:src="@drawable/ic_feedback"
                    android:scaleType="fitCenter"
                    android:padding="15dp"
                    android:id="@+id/imgAllCompliant"
                    android:layout_height="100dp"/>
            </android.support.v7.widget.CardView>


            <LinearLayout
                android:layout_below="@id/ii"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/linfirst"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="All Users "
                    android:textAllCaps="true"
                    android:paddingRight="5dp"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAllCaps="true"
                    android:textAlignment="center"
                    android:paddingLeft="5dp"
                    android:text="View Complaint"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lin3"
                android:layout_below="@id/iv"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Invoice"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:paddingRight="5dp"
                    android:textAllCaps="true"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAllCaps="true"
                    android:text="View Signings"
                    android:textAlignment="center"
                    android:paddingLeft="5dp"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/vii"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Assign Teachers"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:paddingRight="5dp"
                    android:textAllCaps="true"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:text="Settings"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="50dp"
                android:elevation="6dp"
                android:layout_marginLeft="40dp"
                android:id="@+id/iv"
                android:layout_below="@id/linfirst"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="15dp"
                app:cardPreventCornerOverlap="false">

                <ImageView
                    android:layout_width="100dp"
                    android:src="@drawable/ic_transactions"
                    android:scaleType="fitCenter"
                    android:padding="15dp"
                    android:id="@+id/imgInvoice"
                    android:layout_height="100dp"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="50dp"
                android:layout_marginLeft="40dp"
                android:id="@+id/v"
                android:elevation="6dp"
                android:layout_below="@id/linfirst"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="40dp"
                android:layout_alignParentRight="true"
                app:cardPreventCornerOverlap="false">

                <ImageView
                    android:layout_width="100dp"
                    android:src="@drawable/ic_av_timer_black"
                    android:scaleType="fitCenter"
                    android:padding="15dp"
                    android:id="@+id/imgAllSigings"
                    android:layout_height="100dp"/>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="50dp"
                android:elevation="6dp"
                android:layout_marginLeft="40dp"
                android:id="@+id/vi"
                android:layout_below="@id/lin3"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="15dp"
                app:cardPreventCornerOverlap="false">

                <ImageView
                    android:layout_width="100dp"
                    android:src="@drawable/ic_addben"
                    android:scaleType="fitCenter"
                    android:padding="15dp"
                    android:id="@+id/imgAssignTeachers"
                    android:layout_height="100dp"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="50dp"
                android:layout_marginLeft="40dp"
                android:id="@+id/vii"
                android:elevation="6dp"
                android:layout_below="@id/lin3"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="40dp"
                android:layout_alignParentRight="true"
                app:cardPreventCornerOverlap="false">

                <ImageView
                    android:layout_width="100dp"
                    android:src="@drawable/ic_settings_black"
                    android:scaleType="fitCenter"
                    android:id="@+id/imgSettings"
                    android:padding="15dp"
                    android:layout_height="100dp"/>
            </android.support.v7.widget.CardView>





        </RelativeLayout>
    </LinearLayout>

</ScrollView>