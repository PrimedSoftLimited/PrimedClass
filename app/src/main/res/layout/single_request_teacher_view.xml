<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:layout_height="wrap_content">


    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:textSize="16sp"
        android:textColor="#000"
        android:text="Enter Class You are requesting for "

        android:layout_height="wrap_content" />
    <com.primedsoft.primedclass.Utils.MultipleSelectionSpinner
        android:id="@+id/spinClassTaughtDialog"
        android:layout_width="300dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="18dp"
        android:background="@drawable/onebubble"
        android:hint="Class requesting for"
        android:textColorHint="#fff"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#000"
        android:text="Enter Subject You are requesting for "/>

    <com.primedsoft.primedclass.Utils.MultipleSelectionSpinner
        android:id="@+id/spinSubjectTaughtDialog"
        android:layout_width="300dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="18dp"
        android:background="@drawable/onebubble"
        android:hint="Subject you are requesting for"
        android:layout_marginBottom="50dp"
        android:textColorHint="#fff"
        />

    <Button
        android:id="@+id/btnRequestTeacherDialog"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/_dark"
        android:textAllCaps="false"
        android:foregroundTint="@color/darkop"
        android:text="Request"
        android:textColor="#fff"
        android:textSize="20sp" />


</LinearLayout>
